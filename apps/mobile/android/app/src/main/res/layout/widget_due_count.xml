<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_due_count_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/widget_card_background"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/widget_due_count_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 복습"
        android:textColor="#2F3A44"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_due_count_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0개 · 약 1분"
        android:textColor="#101418"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_due_count_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="연속 0일"
        android:textColor="#56606B"
        android:textSize="13sp" />
</LinearLayout>
