<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_daily_word_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/widget_card_background"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/widget_daily_word_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 단어"
        android:textColor="#2F3A44"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_daily_word_jp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="会う"
        android:textColor="#101418"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_daily_word_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="あう"
        android:textColor="#56606B"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/widget_daily_word_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="[N5] 만나다"
        android:textColor="#27303A"
        android:textSize="13sp" />
</LinearLayout>
